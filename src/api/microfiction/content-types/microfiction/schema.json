{
  "kind": "collectionType",
  "collectionName": "microfictions",
  "info": {
    "singularName": "microfiction",
    "pluralName": "microfictions",
    "displayName": "microfiction",
    "description": "une microfiction épinglée à un point sur la carte"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
      "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "Annee": {
      "type": "integer"
    },
    "Mois": {
      "type": "string"
    },
    "Jour_du_mois": {
      "type": "integer"
    },
    "Heure": {
      "type": "string"
    },
    "Texte_microfiction": {
      "type": "blocks"
    },
    "ordre_de_lecture": {
      "type": "integer"
    },
    "backgroundcolor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "pingenerator": {
      "type": "customField",
      "customField": "plugin::pingenerator.pingenerator"
    }
  }
}
